{
  "name": "Adapt_Frontend",
  "version": "1.0.1",
  "description": "Build tool for adapt",
  "dependencies": {
    "node-bourbon": "*",
    "node-neat": "*",
    "node-sass": "*",
    "normalize.css": "3.0.3"
  },
  "devDependencies": {},
  "scripts": {
    "build": "node-sass --include-path node_modules/node-bourbon/node_modules/bourbon/app/assets/stylesheets --include-path node_modules/node-neat/node_modules/bourbon-neat/app/assets/stylesheets --source-map true ../sass/ -o ../css",
    "postinstall": "npm run build",
    "start": "npm run watch",
    "watch": "npm run build && npm run build -- -w"
  },
  "author": "adapt @ adapt.dk"
}
